<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="eShopQA Regression Tests" parallel="tests" thread-count="3">

    <test name="Login Regression" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testValidLogin"/>
                    <include name="testInvalidLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Home Page Regression" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.HomePageTest">
                <methods>
                    <include name="testHomePageLoads"/>
                    <include name="testSearchProduct"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Cross Browser Login Tests" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="testValidLogin"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>